<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="500" Width="500" Height="600"
        x:Class="ws.MainWindow"
        Title="ws" Padding="10">
	<Grid RowDefinitions="*,1.1*">
		<StackPanel>
			<Grid ColumnDefinitions="*,*" >
				<TextBox Watermark="Host" x:Name="host" VerticalContentAlignment="Center">192.168.1.166</TextBox>
				<NumericUpDown Watermark="Port" x:Name="port" AllowSpin="True" Maximum="65535" Value="25566" FormatString="0" Minimum="1" Grid.Column="1" ></NumericUpDown>
			</Grid>
			<TextBox Watermark="Password" x:Name="password" Margin="0 10 0 0" ></TextBox>
			<Button Margin="0 10 0 0 " Click="Button_Click" x:Name="connectbutton">Connect</Button>
		</StackPanel>
		<DockPanel Grid.Row="1" >
			<StackPanel DockPanel.Dock="Bottom" Spacing="2">
				<TextBox Watermark="Commands" x:Name="command" IsEnabled="False"></TextBox>
				<Button Click="Button_Click_1" IsEnabled="False" x:Name="sendbutton">Send</Button>
				<ScrollViewer Height="200"  VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible" x:Name="scrollv">
					<TextBox   IsReadOnly="True" HorizontalAlignment="Stretch" x:Name="output"  />
				</ScrollViewer>
				
			</StackPanel>
		</DockPanel>
	</Grid>

</Window>
